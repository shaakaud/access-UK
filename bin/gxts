#!/bin/sh

PATH="/bin:/usr/bin"; export PATH

uname=""
if [ -x /bin/uname ]; then
    uname=`/bin/uname`;
else
    uname=`/usr/bin/uname`;
fi

case "x$uname" in
    xSunOS )
    echo "sun"
        #eval 'exec /import/tools/bin/perl -x $0 ${1+"$@"}'
        eval 'exec /bin/perl -x $0 ${1+"$@"}'
    ;;
    xLinux )
    echo "lin"
        eval 'exec /usr/bin/perl -x $0 ${1+"$@"}'
    ;;
    xNetBSD )
    echo "net"
        eval 'exec /usr/pkg/bin/perl -x $0 ${1+"$@"}'
    ;;
esac

echo "Error: Please contact cmteam@riverstonenet.com"
echo "Error: Cannot determine your operating system in script $0, line 40"
exit 20

#! perl
use strict;


my $n = 1;

if($ARGV[0] =~ m/^\d+$/){
    $n = shift @ARGV;;
}

if((scalar @ARGV) == 0){
    my $hostname = `/bin/hostname`; chomp $hostname;
    push @ARGV, $hostname;
}

my @good_colors = ();

my $machine;
for $machine (@ARGV){
    my $i;
    for($i=0; $i<$n; $i++){
        my ($fg, $bg) = getcolor();
        my $xt = `echo $0|/import/atria/cmtools/bin/abspath`; chomp $xt;
        my $rsh_cmd = "sh -c \"TERM=xterm-256color DISPLAY=$ENV{DISPLAY} sm_fg=$fg sm_bg=$bg sm_xt=$xt xterm -vb -fg $fg -bg $bg -ah -T $machine -n $machine -sb -sl 10000 &\"&";
        my $cmd = "rsh $machine '$rsh_cmd'&";
        print "--doing: $cmd\n";
        system "$cmd > /dev/null 2>&1";
    }
}

sub getcolor {
    my $x = 3;
    if((scalar @good_colors) == 0){
        my $status = open O, "<$0";
        if(!defined($status)){
            return("aliceblue", "chocolate4");
        }

        my @lines = <O>;
        close O;
        my $line;
        for $line (@lines){
            if($line =~ m{^\s*#\s*-fg\s+([^\s]+)\s+-bg\s+([^\s]+)}){
                push @good_colors, [$1, $2];
            }
        }
    }
    my $n = rand(scalar @good_colors);
    $n =~ s{\..*}{};
    $n = ($n eq "") ? 0 : $n;
    return(${$good_colors[$n]}[0], ${$good_colors[$n]}[1]);
}
__END__
